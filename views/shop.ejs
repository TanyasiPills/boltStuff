<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hello</title>
    <link rel='stylesheet' type='text/css' media='screen' href='main.css'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <form method="post" class="contains">
        <br/>
        <div class="container">
            <hr>

            <div class="form-group">
                <label for="name">Teljes név:</label>
                <input type="text" class="form-control" name="name" id="name" value="<%= data.name %>">
            </div>
    
            <div class="form-group">
                <label for="card">Bankszámla:</label>
                <input type="text" class="form-control" name="bankCard" id="bankCard" value="<%= data.bankCard %>">
            </div>
    
            <div class="form-group form-check checkstuff">
                <input type="checkbox" class="form-check-input" name="enable" id="enable" value="1" <%= data.enable ? 'checked' : '' %>>
                <label class="form-check-label" for="enable">Szerződési Feltételek</label>
            </div>

            <hr>
        </div>
    
        <% for(let item of errors){%><div class="alert alert-danger" role="alert"><%= item %></div><%}%>
    
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Tovább">
        </div>
    </form>
    <script>
        const input = document.getElementById('card');
        
        input.addEventListener('input', function (event) {
          const regex = /^\d{0,8}(-\d{0,8})?(-\d{0,8})?$/;
          if (!regex.test(input.value)) {
            input.value = input.value.slice(0, -1);
          }
        });
    </script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>